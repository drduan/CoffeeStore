		    <solid android:color="@color/verify_button_focus"/>
		    <corners android:topRightRadius="5dp" android:bottomRightRadius="5dp"></corners>
		    <size android:height="45dp"/>
		</shape>
    </item>
	<item>
		<shape >
		    <solid android:color="@color/verify_button"/>
